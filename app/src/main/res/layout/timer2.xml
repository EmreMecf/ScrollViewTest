<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/txtimer"
        android:padding="5dp">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:textColor="#4c8c4a"
            android:text="18 Haziran 2022'ye Kalan Süre"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/day"
            app:layout_constraintBottom_toTopOf="@+id/textView15"
            app:layout_constraintVertical_bias="1.0"
           />
    <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            tools:ignore="MissingConstraints"
            android:src="@drawable/ic_baseline_alarm_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:textColor="#4c8c4a"
            android:text="00"
            android:textSize="20sp"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/day"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:textColor="#4c8c4a"
            android:text="GÜN"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/day"
            android:layout_marginStart="5dp"
            android:id="@+id/textView13"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:text="00"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#4c8c4a"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/hour"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:text="SAAT"
            android:textStyle="bold"
            android:textColor="#4c8c4a"
            android:textSize="20sp"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hour"
            android:layout_marginStart="5dp"
            android:id="@+id/textView15"/>

    <TextView
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            android:textColor="#4c8c4a"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            android:layout_marginStart="10dp"
            android:id="@+id/minute" android:layout_width="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAKİKA"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#4c8c4a"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/minute"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>